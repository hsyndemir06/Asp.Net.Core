@model List<RolesAssingViewModel>

@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>AssignRole</h1>

<form method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-check">
            <input type="hidden" asp-for="@Model[i].RoleID" />
            <input type="hidden" asp-for="@Model[i].Name" />
            <input type="checkbox" asp-for="@Model[i].Exists" class="from-check-input" />
            <label class="form-check-label" for="@Model[i].Exists">@Model[i].Name</label>
        </div>
    }
    <button class="btn btn-info">Degisiklikleri Kaydet</button>
</form>
<br />
<a href="/Admin/AdminRole/UserRoleList" class="btn btn-outline-primary"> Listeye Don</a>