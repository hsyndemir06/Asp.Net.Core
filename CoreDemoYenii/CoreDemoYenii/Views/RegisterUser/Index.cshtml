@model UserSignUppViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>INSPINIA | Register</title>

    <link href="~/Adminn/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Adminn/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/Adminn/css/plugins/iCheck/custom.css" rel="stylesheet">
    <link href="~/Adminn/css/animate.css" rel="stylesheet">
    <link href="~/Adminn/css/style.css" rel="stylesheet">

</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen   animated fadeInDown">
        <div>

            <h3>Kayıt Ekranı</h3>
            <p>Yeni Bir Hesap Olustur</p>
            <form class="m-t" role="form" asp-action="Index">
                <div class="form-group">
                    <span asp-validation-for="@Model.NameSurname" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="@Model.NameSurname" placeholder="AdSoyad" required="">
                </div>
                <div class="form-group">
                    <span asp-validation-for="@Model.Mail" class="text-danger"></span>
                    <input type="email" class="form-control" asp-for="@Model.Mail" placeholder="Email" >
                </div>
                <div class="form-group">
                    <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="@Model.UserName" placeholder="Kullanıcı Ad" >
                </div>
                <div class="form-group">
                    <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="@Model.ImageUrl" placeholder="Image ekle" required="">
                </div>
                <div class="form-group">
                    <span asp-validation-for="@Model.Passowrd" class="text-danger"></span>
                    <input type="password" class="form-control" asp-for="@Model.Passowrd" placeholder="Sifre" required="">
                </div>
                <div class="form-group">
                    <span asp-validation-for="@Model.ConfirmPassowrd" class="text-danger"></span>
                    <input type="password" class="form-control" asp-for="@Model.ConfirmPassowrd" placeholder="Sifre Tekrar" required="">
                </div>


                <div class="form-group">
                    <div class="checkbox i-checks"><label> <input type="checkbox"><i></i>Kullanım sartlarını Okudum </label></div>
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">KayıtOl</button>

                <p class="text-muted text-center"><small>Bir Hesabınız Var mı? </small></p>
                <a class="btn btn-sm btn-white btn-block" href="/RegisterUser/Login/">GirisYap</a>

                <div class="text-danger" asp-validation-summary="ModelOnly"></div>

            </form>
            <p class="m-t"> <small>Asp.Net Core 8.0 Proje Kapı | Tüm Hakları Saklıdır @DateTime.Now.Year</small> </p>
        </div>
    </div>

    <!-- Mainly scripts -->
    <script src="~/Adminn/js/jquery-3.1.1.min.js"></script>
    <script src="~/Adminn/js/popper.min.js"></script>
    <script src="~/Adminn/js/bootstrap.js"></script>
    <!-- iCheck -->
    <script src="~/Adminn/js/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });
    </script>
</body>

</html>
